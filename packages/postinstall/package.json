{
  "name": "@nozomiishii/postinstall",
  "version": "0.0.3",
  "description": "Nozomi's Recommended postinstall scripts",
  "keywords": [
    "postinstall",
    "scripts"
  ],
  "homepage": "https://github.com/nozomiishii/configs/blob/main/packages/postinstall/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/nozomiishii/configs.git",
    "directory": "packages/postinstall"
  },
  "license": "MIT",
  "author": "Nozomi Ishii",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "postinstall": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "link": "pnpm link --global",
    "prepublishOnly": "pnpm run build",
    "tsc": "tsc"
  },
  "dependencies": {
    "figlet": "1.8.1",
    "zx": "8.5.4"
  },
  "devDependencies": {
    "@nozomiishii/tsconfig": "workspace:*",
    "@types/node": "22.15.27",
    "tsup": "8.5.0",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.11.0",
  "publishConfig": {
    "access": "public"
  },
  "pnpm": {
    "executionEnv": {
      "nodeVersion": "22.14.0"
    }
  }
}

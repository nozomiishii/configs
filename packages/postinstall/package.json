{
  "name": "@nozomiishii/postinstall",
  "version": "0.0.6",
  "description": "Nozomi's Recommended postinstall scripts",
  "keywords": [
    "postinstall",
    "scripts"
  ],
  "homepage": "https://github.com/nozomiishii/configs/blob/main/packages/postinstall/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/nozomiishii/configs.git",
    "directory": "packages/postinstall"
  },
  "license": "MIT",
  "author": "Nozomi Ishii",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "postinstall": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "link": "pnpm link --global",
    "prepublishOnly": "pnpm run build",
    "tsc": "tsc"
  },
  "dependencies": {
    "figlet": "1.9.4",
    "zx": "8.8.5"
  },
  "devDependencies": {
    "@nozomiishii/tsconfig": "workspace:*",
    "@types/figlet": "1.7.0",
    "@types/node": "24.10.9",
    "tsup": "8.5.1",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.28.1",
  "publishConfig": {
    "access": "public"
  }
}
